# Server Configuration
CALLME_PORT=3333

# Ngrok Configuration (Free account works)
CALLME_NGROK_AUTHTOKEN=your_ngrok_authtoken

# Phone Configuration
# Provider: 'telnyx' (recommended) or 'twilio'
CALLME_PHONE_PROVIDER=telnyx

# Your Phone Numbers (E.164 format, e.g. +15551234567)
CALLME_USER_PHONE_NUMBER=+1...
CALLME_PHONE_NUMBER=+1...

# Provider Credentials
# For Telnyx:
# CALLME_PHONE_ACCOUNT_SID = Connection ID
# CALLME_PHONE_AUTH_TOKEN = API Key V2
# For Twilio:
# CALLME_PHONE_ACCOUNT_SID = Account SID
# CALLME_PHONE_AUTH_TOKEN = Auth Token
CALLME_PHONE_ACCOUNT_SID=...
CALLME_PHONE_AUTH_TOKEN=...

# Google Cloud Configuration
# Ensure GOOGLE_APPLICATION_CREDENTIALS is set in your shell or use strict auth here
# If running via 'gcloud auth application-default login', you might not need key file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/key.json

# Optional: Voice & Model
CALLME_TTS_VOICE=en-US-Journey-F
CALLME_STT_MODEL=latest_long
