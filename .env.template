# Server Configuration
CALLME_PORT=3333

# Ngrok Configuration (Free account works)
CALLME_NGROK_AUTHTOKEN=your_ngrok_authtoken

# Phone Provider: 'vapi' (recommended) or 'telnyx'
CALLME_PHONE_PROVIDER=vapi

# Vapi Configuration (recommended)
CALLME_VAPI_API_KEY=your_vapi_api_key
CALLME_VAPI_PHONE_NUMBER_ID=your_vapi_phone_number_id

# Your Phone Number (destination to call)
CALLME_USER_PHONE_NUMBER=+1234567890

# Telnyx Configuration (optional, if using Telnyx)
# CALLME_PHONE_ACCOUNT_SID=...
# CALLME_PHONE_AUTH_TOKEN=...
# CALLME_PHONE_NUMBER=+1...
